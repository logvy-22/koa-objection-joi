{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },
  "typescript.referencesCodeLens.enabled": true
}